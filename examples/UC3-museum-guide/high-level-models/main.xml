        <input type="bt-plugin-ascxml" src="./bt_plugins/ROS2Action.scxml" />
    </behavior_tree>

    <node_models>
        <input type="node-ascxml" src="./components/BatteryComponent.scxml" />
        <input type="node-ascxml" src="./components/NotifyUserComponent.scxml" />
        <input type="node-ascxml" src="./components/BlackboardComponent.scxml" />
        <input type="node-ascxml" src="./components/SchedulerComponent.scxml" />
        <input type="node-ascxml" src="./components/PeopleDetectorFilterComponent.scxml" />
        <input type="node-ascxml" src="./components/NavigationComponent.scxml" />
        <input type="node-ascxml" src="./skills/BatteryLevelSkill.scxml" />
        <input type="node-ascxml" src="./skills/AlarmSkill.scxml" />
        <input type="node-ascxml" src="./skills/IsPoiDone1Skill.scxml" />
        <input type="node-ascxml" src="./skills/IsPoiDone2Skill.scxml" />
        <input type="node-ascxml" src="./skills/SetPoi1Skill.scxml" />
        <input type="node-ascxml" src="./skills/SetPoi2Skill.scxml" />
        <input type="node-ascxml" src="./skills/ResetSkill.scxml" />
        <input type="node-ascxml" src="./skills/SetCurrentPoiDoneSkill.scxml" />
        <input type="node-ascxml" src="./skills/VisitorsFollowingRobotSkill.scxml" />
        <input type="node-ascxml" src="./skills/WaitSkill.scxml" />
        <input type="node-ascxml" src="./skills/GoToPoiActionSkill.scxml" />
    </node_models>

    <properties>
        <!-- <input type="xml" src="./Properties/properties.xml" /> -->
        <input type="jani" src="./properties/properties.jani" />
    </properties>
</roaml>
